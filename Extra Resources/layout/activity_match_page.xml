    ​

    ​

    ​

    ​

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="1061dp"
                android:layout_height="86dp"
                android:id="@+id/imageView"
                android:background="@mipmap/puband"
                android:layout_alignParentStart="false" />

            <ImageButton

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:id="@+id/Accept"

                android:background="@mipmap/ic_launcher"

                android:layout_weight="1"
                android:layout_alignStart="@+id/timeText"
                android:layout_alignEnd="@+id/addressText"
                android:layout_below="@+id/googleMapsButton"
                android:layout_alignParentBottom="true" />

            <ImageButton

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:id="@+id/googleMapsButton"

                android:background="@mipmap/botton"

                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"

                android:text="Loading.."

                android:id="@+id/addressText"

                android:textSize="50sp"

                android:background="#ffffff"

                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:layout_above="@+id/Accept"
                android:layout_alignStart="@+id/timeText" />

            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"

                android:text="Loading..."

                android:id="@+id/pubNameText"

                android:textSize="50sp"

                android:layout_above="@+id/addressText"
                android:layout_alignParentEnd="true" />

            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"

                android:text="Loading..."

                android:id="@+id/timeText"

                android:paddingBottom="6sp"

                android:textSize="50sp"

                android:layout_below="@+id/addressText"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

    ​

    ​

    ​

</LinearLayout>

