<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.asherfischbaum.hackapint.MatchPage"
    android:background="@mipmap/profilebackground"
    android:id="@+id/ow">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/googleMapsButton"
        android:background="@mipmap/botton"
        android:layout_alignBottom="@+id/timeText"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="adress filler"
        android:id="@+id/addressText"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/googleMapsButton"
        android:layout_alignRight="@+id/googleMapsButton"
        android:layout_alignEnd="@+id/googleMapsButton"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="postcode filler"
        android:id="@+id/postcodeText"
        android:background="#ffffff"
        android:layout_below="@+id/addressText"
        android:layout_alignLeft="@+id/addressText"
        android:layout_alignStart="@+id/addressText"
        android:paddingTop="5sp"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time filler"
        android:id="@+id/timeText"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/postcodeText"
        android:layout_alignStart="@+id/postcodeText"
        android:paddingBottom="6sp"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name filler"
        android:id="@+id/pubNameText"
        android:layout_alignTop="@+id/googleMapsButton"
        android:layout_alignLeft="@+id/addressText"
        android:layout_alignStart="@+id/addressText"
        android:textSize="24sp"
        android:paddingTop="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name Filler"
        android:id="@+id/nameText"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/pubNameText"
        android:layout_alignStart="@+id/pubNameText"
        android:layout_marginTop="82dp"
        android:focusableInTouchMode="true"
        android:textColor="#ece2c7"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="gender filler"
        android:id="@+id/genderText"
        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/nameText"
        android:layout_alignStart="@+id/nameText"
        android:textSize="24sp"
        android:textColor="#ece2c7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Age filler"
        android:id="@+id/ageText"
        android:layout_below="@+id/genderText"
        android:layout_alignLeft="@+id/genderText"
        android:layout_alignStart="@+id/genderText"
        android:textColor="#ece2c7"
        android:textSize="24sp"
        android:paddingTop="6sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mobile filler"
        android:id="@+id/mobileText"
        android:layout_below="@+id/ageText"
        android:layout_alignLeft="@+id/ageText"
        android:layout_alignStart="@+id/ageText"
        android:textSize="24sp"
        android:textColor="#ece2c7"
        android:paddingTop="4sp"/>

</RelativeLayout>
